<div class="bao_phu">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="dieu-huong">
                    <ul>
                        <li>
                            <a title="Đến trang chủ" href="/"><span>Trang chủ</span></a>
                        </li>
                        <li style="margin-left: 5px;">
                            <i class="fas fa-angle-double-right"></i>
                        </li>
                        <li style="margin-left: 5px;">
                            <strong><span>Trang khách hàng</span></strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2><b>Thông tin tài khoản</b></h2>
                <br>
                <p><i>Xin chào</i> {{un}}</p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9">
                <table class="table">
                    <thead style="background-color: #e7b45a;">
                        <tr style="color: white;">
                            <th>Mã ĐH</th>
                            <th>Địa chỉ</th>
                            <th>Giá trị đơn hàng</th>
                            <th>TT thanh toán</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bills}}
                        <tr style="font-family:Georgia, 'Times New Roman', Times, serif;" class="DH">
                            <th>{{this.ID}}</th>
                            <th>{{this.diachi}}</th>
                            <th>{{this.tongcong}}</th>
                            <th>{{this.thanhtoan}}</th>
                            <th id="tt">{{this.vanchuyen}}</th>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6">
                                <p>Không có đơn hàng nào.</p>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3" style="margin-bottom: 20px;">
                <div class="">
                    <h3 style="margin-top: -6px;">Thông tin khách hàng</h3>
                    <div class="block-content form-signup  padding-bottom-10">
                        <p>
                            <i class="fa fa-user" style="color: #e7b45a;"></i> {{un}}
                        </p>
                        <p id="SLDH">
                            Đơn hàng: 0
                        </p>
                    </div>
                    <div class="fw f-left w_100">
                        <a href="/cart">
                            <button class="sub" style="width:200px">
                                Đi tới giỏ hàng
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var x = document.getElementsByClassName('DH');
        var y = x.length;
        document.getElementById("SLDH").innerHTML = "Đơn Hàng : " + y;
    </script>