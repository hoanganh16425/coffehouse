<div class="container" style="margin-bottom: 10px;">
  <div class="row" style="margin-top: 200px;">
    <h2>Coffee housse</h2>
    <div class="col-lg-4">

      <h3>Thông tin nhận hàng</h3>
      <form action="/cart/dathang?_method=PATCH" method="POST">

        <input class="tt" type="text" id="fname" name="hovaten" placeholder="Họ và tên" required>

        <input class="tt" type="text" id="phone" name="sodt" placeholder="Số điện thoại(Tùy chọn)" required>

        <input class="tt" type="text" id="adr" name="diachi" placeholder="Địa chỉ( Tùy chọn)" required>
        <input class="hidden" type="text" name="tinhtrang" value="1">
        <input id="ID" class="hidden" type="text" name="ID" value="">

        <div>
          <a href="">Quay về giỏ hàng</a>
          <button type="submit" class="btn btn-checkout spinner" style="float: right;">
            <span class="spinner-label">ĐẶT HÀNG</span>
          </button>
        </div>

      </form>
    </div>
    <script>
      function TaoSoNgauNhien(min, max) {
        return Math.floor(Math.random() * (max - min)) + min;
      }

      var a = TaoSoNgauNhien(1000, 9999);
      document.getElementById("ID").value = a;
    </script>

    <div class="col-lg-4">
      <h3>Vận chuyển</h3>
      <div class="alert alert--info">
        <label> Thanh toán khi nhận hàng
          <input type="radio" checked="checked" name="vanchuyen">
          <span class="checkmark"></span>
        </label>
      </div>
      <h3>Thanh toán</h3>
      <div class="alert alert--info">
        <label>Thanh toán khi giao hàng (COD)
          <input type="radio" checked="checked" name="vanchuyen">
          <span class="checkmark"></span>
        </label>
      </div>
    </div>
    <div class="col-lg-4">
      <h3>Chi tiết đơn hàng</h3>
      <div>
        <table style="width:100%">
          <tr style="color: deepskyblue;">
            <td style="width:30%">Sản phẩm</td>

            <td>mô tả</td>

            <td style="width:20%">giá</td>
          </tr>
          {{#each bills}}
          <tr>
            <td style="width:30%"><span><img src="{{this.img}}" alt=""></span></td>

            <td>{{this.sanpham}}</td>

            <td style="width:30%">{{this.gia}}</td>
          </tr>
          {{/each}}
        </table>
      </div>

    </div>
  </div>
</div>