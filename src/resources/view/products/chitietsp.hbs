<script>
    //Bắt sự kiện keyup của textbox
    $("#sl").keyup(textthaydoi);
    //Cho #inputext phát sinh một sự kiện keyup ban đầu
    $("#sl").keyup();
    //Hàm đọc giá trị và hiện thị thông tin
    function textthaydoi() {
        var value = $(this).val();
        var gia = document.getElementById('price2').innerHTML;
        document.getElementById("count").innerHTML = "Số lượng " + value;
        document.getElementById("tong").innerHTML = "Tổng : " + gia * value + " đ";
        document.getElementById("gia").value = gia * value;
    }
</script>